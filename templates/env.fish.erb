set -gx HOMEBREW_ROOT <%= @installdir %>
set -gx HOMEBREW_CACHE <%= @cachedir %>

set -gx BOXEN_HOMEBREW_BOTTLE_URL <%= scope.lookupvar("::homebrew_bottle_url") %>

<% if @set_cflags %>
set -gx CFLAGS "-I$HOMEBREW_ROOT/include"
<% end %>

<% if @set_ldflags %>
set -gx LDFLAGS "-L$HOMEBREW_ROOT/lib"
<% end %>

# Add homebrew'd stuff to the path.

set -gx PATH $HOMEBREW_ROOT/bin:$HOMEBREW_ROOT/sbin:$PATH

# Add homebrew'd stuff to the manpath.

set -gx MANPATH $HOMEBREW_ROOT/share/man:$MANPATH
